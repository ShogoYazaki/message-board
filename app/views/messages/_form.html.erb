<% @message.errors.full_messages.each do |full_message| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
          <li>
            <%= full_message %>
          </li>
      </ul>
    </div>
  <% end %>
<% end %>


<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="message_name" class="control-label col-md-2">名前:</label>
    <div class="col-md-10">
      <%= f.text_field :name, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <label for="message_age" class="control-label col-md-2">年齢:</label>
    <div class="col-md-2">
      <%= f.text_field :age, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label for="message_board" class="col-sm-2 control-label">内容:</label>
    <div class="col-sm-10">
      <%= f.text_area :body, :class => "form-control" %>
    </div>
  </div>
  <label for="message_subbmit" class="col-sm-2 control-label">  </label>
  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>